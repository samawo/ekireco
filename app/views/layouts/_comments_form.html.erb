<%= form_for([parent,comment],remote: true) do |f| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= comment.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if parent.class.name=="Station" %><%= f.hidden_field :station_id %><% end %>
  <% if parent.class.name=="Route" %><%= f.hidden_field :route_id %><% end %>
  <% if parent.class.name=="Prefecture" %><%= f.hidden_field :prefecture_id %><% end %>
  <div class="field">
    <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>