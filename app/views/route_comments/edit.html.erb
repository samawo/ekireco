<%= form_for([@route,@route_comment]) do |f| %>
  <% if @route_comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= @route_comment.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @route_comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :route_id %>
  <div class="field">
    <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>